<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/drawable_padding_10dp"
    android:layout_margin="@dimen/drawable_padding_10dp"
    android:layout_marginTop="@dimen/margin_top_8dp"
    android:background="@drawable/restnagle_dashboard">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_biches"
        android:paddingStart="@dimen/paddingleft_item_20dp"
        android:paddingEnd="@dimen/padding_right_20dp"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_14dp" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/item_title"
        android:layout_marginTop="95dp"
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:text="@string/date_stagger_manager_text"
        android:layout_marginStart="@dimen/padding_30dp"
        android:layout_below="@id/item_title"

        />


</androidx.constraintlayout.widget.ConstraintLayout>