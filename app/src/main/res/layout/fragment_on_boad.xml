<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black_ligth"
    tools:context=".onboard.OnBoadFragment">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/send"
        android:layout_margin="20dp"
        android:text="@string/propustit"
        android:textColor="@color/dark_orange"

        />

    <TextView
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_477"
        android:text="@string/start_onboarding"
        android:textColor="@color/white_F3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_top_107dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="-55dp"
        tools:layout_editor_absoluteY="29dp" />

    <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
        android:id="@+id/worm_dots_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dotsColor="@color/onarge_onboard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/marginBottom"
        app:dotsStrokeColor="@color/white_grey_onboard"
        app:dotsCornerRadius="@dimen/indicator_radius_8dp"
        app:dotsSize="@dimen/dotsSize_16dp"
        app:dotsSpacing="@dimen/dotsSpacing_4dp"
        app:dotsStrokeWidth="@dimen/dotsStroke_width_2dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>